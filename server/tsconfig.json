{
  "compilerOptions": {
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",                               
    "target": "ES2020",
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "sourceMap": true,     
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,             
    "skipLibCheck": true           
  },
}

